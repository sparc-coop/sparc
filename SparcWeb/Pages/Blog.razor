@page "/blog/{title}"

<section class="blog-page">
    <div class="container">
        <div class="blog">
            <h5 class="semi-bold title-1">@Ibis["title"]</h5>
                @if (Channel != null)
                {
                    @foreach (var post in Channel.Content.Where(x => x.Tag == null))
                    {
                        <div class="posted">
                            @*<p>Name</p>*@
                            <p>@post.Timestamp.ToString("M")</p>
                        </div>
                        <div class="blog-image">
                            <img src="/images/Laptop.png" />
                        </div>
                        <p>
                            @post
                        </p>
                    }
                }
        </div>
    </div>
</section>

@code {
    [Parameter] public string title { get; set; }
    public string Content = "";
    IbisChannel Channel;

    protected override async Task OnInitializedAsync()
    {
        Channel = await Ibis.GetAllAsync(title);
    }
}