<div class="project-card">
    <div class="card-content">
        <div class="image-wrapper">
            <a href="/Projects/@titleURL">
                <img class="photo" src="images/Laptop.png" />
                @if(Status.ToLower() == "live")
                {
                    <img class="project-status live" src="images/icons/Status Pin Live.svg" />
                } else
                {
                    <img class="project-status in-progress" src="images/icons/Status Pin In Progress.svg" />
                }
            </a>
        </div>
        <div class="card-header">
            <h5 class="title-2 semi-bold">@Title</h5>
            <a href="@Link" class="image-wrapper">
                <img src="images/icons/Up-Right.svg" />
            </a>
        </div>
        <p class="subtitle-small">
            @Content
        </p>
        <div class="card-tags-wrapper">
            <div class="card-tags">
                <button class="btn-small">Design</button>
                <button class="btn-small">Productivity</button>
            </div>
            <div class="card-github">
                <a href="@Github"><img src="images/icons/Github.svg"/></a>
            </div>
        </div>
    </div>
</div>

@code{
    [Parameter] public string Title { get; set; }
    [Parameter] public string Status { get; set;  }
    [Parameter] public string ImgUrl { get; set; }
    [Parameter] public string Github { get; set;  }
    [Parameter] public string Link { get; set; }
    [Parameter] public string Content { get; set;  }

    string titleURL;

    protected override async Task OnInitializedAsync()
    {
        titleURL = Title.Replace(' ', '-');
    }
}