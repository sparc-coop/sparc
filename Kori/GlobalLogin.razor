@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using System.Net.Http.Json
@using Sparc.Blossom.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Text.RegularExpressions

<style class="kori-ignore">
    @@import url(https://fonts.googleapis.com/css2?family=Encode+Sans+Semi+Expanded:wght@100;200;300;400;500;600;700;800;900&display=swap);
    @@import url(https://fonts.googleapis.com/css2?family=Encode+Sans+Expanded:wght@100;200;300;400;500;600;700;800;900&display=swap);
</style>

<div class="login-component kori-ignore">
    <AuthorizeView>
        <Authorized>
            <button class="login-component__btn login-component__toggle @(context.User.IsAnonymous() ? "loggedout" : "loggedin")" aria-label="user" @onclick=ToggleLoginMenu>
                <UserIcon LoggedIn="!context.User.IsAnonymous()" />
            </button>

            <div class="login-component__menu @(ShowMenu ? "show" : "")">
                @switch (Auth.LoginState)
                {
                    case LoginStates.LoggedOut:
                        <div class="login-menu__header">
                            <div class="login-header login-text__primary">Welcome!</div>
                            <p class="login-subheader login-text__secondary">Lorem ipsum dolor sit amet, consectetur</p>
                        </div>
                        <div class="login-menu__actions">
                            <button class="login-component__btn login-btn" @onclick=LoginWithPasskey>
                                <img src="_content/Kori/icons/Key.svg" />
                                <div class="login-btn__content">
                                    <figcaption class="login-text__primary">Passkey Login</figcaption>
                                    <aside class="login-text__secondary">Set up your passkey</aside>
                                </div>
                            </button>
                            <div class="login-menu__divider"></div>
                            <button class="login-component__btn language-btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper login-text__btn">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img class="expand-icon @(ShowLanguageSettings ? "rotate": "")" src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                    case LoginStates.ReadyForLogin:
                        <div class="login-menu__header">
                            <div class="login-header login-text__primary">Welcome!</div>
                            <p class="login-subheader login-text__secondary">Lorem ipsum dolor sit amet, consectetur</p>
                        </div>
                        <div class="login-menu__actions">
                            <form class="login-menu__input" @onsubmit=LoginWithEmail>
                                <input id="login-email" class="login-component__input" @ref=LoginInput type="email" @bind="Email" name="username" placeholder="Enter your email" autocomplete="username webauthn" @onclick:stopPropagation="true" />
                                <button type="submit" class="login-component__btn submit-btn login-text__btn">
                                    Login
                                </button>
                                <div class="form-error @(ShowFormError ? "show" : "")">
                                    <span class="form-error__message">Email cannot be blank</span>
                                </div>
                            </form>
                            <div class="use-passkey">
                                <button class="passkey-btn login-component__btn login-text__btn" @onclick="LoginWithPasskey">
                                    <img src="_content/Kori/icons/Key.svg" /> Use passkey
                                </button>
                            </div>
                            <div class="login-menu__divider"></div>
                            <button class="login-component__btn language-btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper login-text__secondary">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img class="expand-icon @(ShowLanguageSettings ? "rotate": "")" src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                    case LoginStates.VerifyingToken:
                    case LoginStates.VerifyingEmail:
                        <div class="login-menu__header">
                            <div class="login-header login-text__primary">Welcome!</div>
                            <p class="login-subheader login-text__secondary">Lorem ipsum dolor sit amet, consectetur</p>
                        </div>
                        <div class="login-menu__actions">
                            <form class="login-menu__input" @onsubmit=LoginWithEmail>
                                <input id="login-email" class="login-component__input" @ref=LoginInput type="email" @bind="Email" name="username" placeholder="Enter your email" autocomplete="username webauthn" @onclick:stopPropagation="true" disabled />
                                <button type="submit" id="submit-btn" class="login-component__btn submit-btn login-text__btn" disabled>
                                    Login
                                </button>
                                <div class="form-error @(ShowFormError ? "show" : "")">
                                    <span>Email cannot be blank</span>
                                </div>
                            </form>
                            <div class="login-component__message">
                                <span class="login-text__secondary">Signing you in...</span>
                            </div>
                            <div class="login-menu__divider"></div>
                            <button class="login-component__btn language-btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper login-text__btn">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img class="expand-icon @(ShowLanguageSettings ? "rotate": "")" src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                    case LoginStates.AwaitingMagicLink:
                        <div class="login-menu__header">
                            <div class="login-header login-text__primary">Welcome!</div>
                            <p class="login-subheader login-text__secondary">Lorem ipsum dolor sit amet, consectetur</p>
                        </div>
                        <div class="login-menu__actions">
                            <form class="login-menu__input" @onsubmit=LoginWithEmail>
                                <input id="login-email" class="login-component__input" @ref=LoginInput type="email" @bind="Email" name="username" placeholder="Enter your email" autocomplete="username webauthn" @onclick:stopPropagation="true" disabled />
                                <button type="submit" id="submit-btn" class="login-component__btn submit-btn" disabled>
                                    Login
                                </button>
                                <div class="form-error @(ShowFormError ? "show" : "")">
                                    <span>Email cannot be blank</span>
                                </div>
                            </form>
                            <div class="login-component__message">
                                <span class="awaiting-link login-text__secondary">Click the link in your email!</span>
                                <div class="different-email">
                                    <span class="login-text__secondary"><img src="_content/Kori/icons/Help.svg" /> Didn't get an email?</span>
                                    <button class="login-component__btn login-text__btn" @onclick=ClearInput>Try a different email</button>
                                </div>
                            </div>
                            <div class="use-passkey">
                                <button class="passkey-btn login-component__btn login-text__btn" @onclick="LoginWithPasskey">
                                    <img src="_content/Kori/icons/Key.svg" /> Use passkey
                                </button>
                            </div>
                            <div class="login-menu__divider"></div>
                            <button class="login-component__btn language-btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img class="expand-icon @(ShowLanguageSettings ? "rotate": "")" src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                    case LoginStates.LoggedIn:
                        <button class="login-component__btn account-btn" @onclick=ToggleAccountSettings>
                            <img src="_content/Kori/icons/Key.svg" />
                            <div class="login-btn__content">
                                <figcaption class="login-text__primary">@Auth.User?.Username</figcaption>
                                <aside class="login-text__secondary">Set up your passkey</aside>
                            </div>
                        </button>
                        <button class="login-component__btn language-btn login-text__btn">
                            <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                        </button>
                        <div class="login-menu__actions">
                            <button class="login-component__btn profile-btn login-text__btn">Profile</button>
                            <button class="login-component__btn logout-btn login-text__btn" @onclick=LogoutAsync>Logout</button>
                            <button class="login-component__btn language-btn login-text__btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper login-text__btn">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                    case LoginStates.Error:
                        <div class="login-menu__header">
                            <div class="login-header login-text__primary">Welcome!</div>
                            <p class="login-subheader login-text__secondary">Lorem ipsum dolor sit amet, consectetur</p>
                        </div>
                        <div class="login-menu__actions">
                            <button class="login-component__btn login-btn" @onclick=LoginWithPasskey>
                                <img src="_content/Kori/icons/Key.svg" />
                                <div class="login-btn__content">
                                    <figcaption class="login-text__primary">Passkey Login</figcaption>
                                    <aside class="logint-text__secondary">Set up your passkey</aside>
                                </div>
                            </button>
                            <div class="login-component__message">
                                <span class="login-text__secondary">Error Message</span>
                            </div>
                            <div class="login-menu__divider"></div>
                            <button class="login-component__btn language-btn" @onclick=ToggleLanguageSettings>
                                <div class="language-btn__wrapper login-text__btn">
                                    <img src="_content/Kori/icons/Language.svg" /> @Language?.DisplayName.ToString()
                                </div>
                                <img class="expand-icon @(ShowLanguageSettings ? "rotate": "")" src="_content/Kori/icons/Expand.svg" />
                            </button>
                            <LanguageSelector ShowLanguages="ShowLanguageSettings" />
                        </div>
                        break;
                }
            </div>
        </Authorized>
    </AuthorizeView>
</div>
<div class="login-component__overlay @(ShowMenu ? "show" : "")" @onclick=ToggleLoginMenu></div>

