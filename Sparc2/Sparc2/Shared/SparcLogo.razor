<figure class="logo" @onclick="GoHome">
    @if (LogoOnly) 
    {
        <LogoText />
    } else if (TextOnly) 
    {
        <LogoText />
    } 
    else 
    {
        <Logo />
        <figcaption>
            <LogoText />
        </figcaption>
    }
</figure>

@code {
    [Parameter] public bool TextOnly { get; set; } = false;
    [Parameter] public bool LogoOnly { get; set; } = false;

    void GoHome()
    {
        Nav.NavigateTo("/");
    }
}
