@using Sparc.Ibis;

<article class="blog-post">
    @if (Post["image"] != null)
    {
        <figure>
            <img src="@Post["image"]" alt="@Post["title"]" />
        </figure>
    }

    @*
    <div class="blog-tags">
    <button class="tag btn-small">#Design</button>
    <button class="tag btn-small">#Productivity</button>
    </div>
    *@

    @if (Post["title"] != null)
    {
        <h3>
            @Post["title"]
        </h3>
    }
    else
    {
        <h3>
            @Post.Text.Substring(0, 30)...
        </h3>
    }

    @if (Post["author"] != null)
    {
        <aside>
            by @Post["author"]
        </aside>
    }

    <time datetime="@Post.Timestamp.ToString("O")">
        @Post.Timestamp.ToString("M")
    </time>
    
    @Post.Html
</article>

@code {
    [Parameter] public IbisContent Post { get; set; } = null!;
}
