@using Sparc.Blossom
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <base href="/" />
    <link rel="stylesheet" type="text/css" href="https://api.kodekit.io/greffe-winterweight.css">
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="Sparc.Coop.styles.css" />
    <link rel="stylesheet" href="https://use.typekit.net/dda1jal.css">
    <HeadOutlet @rendermode="new InteractiveServerRenderMode(false)" />
    <PageTitle>Sparc Cooperative</PageTitle>
</head>

<body>
    <BlossomApp Program="Program" DefaultLayout="MainLayout" @rendermode="new InteractiveServerRenderMode(false)" />
    <script src="_framework/blazor.web.js"></script>
    <script>
        function scrollFunction() {
            const element = document.getElementById("mission");
            element.scrollIntoView({ behavior: 'smooth' });
        }

        function initHyperScript() {
            console.log('INITTING HYPERSCRIPT.....');
            _hyperscript.processNode(document.body);
        }

        function screenSize() {
            var screenWidth = window.innerWidth;
            console.log(screenWidth);
            var menu = document.getElementsByClassName("kori-login__mobile-menu")[0];

            if (menu) {
                console.log(menu.classList);
                if (screenWidth <= 850) {
                    menu.classList.add("show");
                } else {
                    menu.classList.remove("show");
                }
            }
        }

        // window.resize = screenSize();

        // window.addEventListener("resize", e => {
        //     var screenWidth = window.innerWidth;
        //     e.stopImmediatePropagation();
        //     screenSize();
        // });
    </script>
    <script src="https://unpkg.com/hyperscript.org@0.9.12"></script>
</body>
</html>
